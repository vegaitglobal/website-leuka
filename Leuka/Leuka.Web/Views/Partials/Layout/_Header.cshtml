@inherits UmbracoViewPage<Leuka.Core.ViewModels.Partials.Layout.HeaderViewModel>

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta charset="UTF-8" />

<header class="header" id="header">
    <div class="header-wrapper" id="header-wrapper">
        <div class="images">
            <img src="~/assets/images/logo-transparent-1.svg" />
            <img src="@Model.Logo.Url" alt="Leuka"/>
        </div>
        <button class="hamburger-icon" id="hamburger-icon" onclick="myFunction()">
            <img src="~/assets/images/hamburger.svg" id="hamburger-icon-img"/>
        </button>
        <div class="hamburger">
            <div class="header-buttons">
                @if (@Model.NavigationLinks != null && @Model.NavigationLinks.Any())
                {
                    foreach (var link in @Model.NavigationLinks)
                    {
                        <a href="@link.Url" class="nav-item">@link.Content</a>
                        <hr class="horisontal-line">
                    }
                }
                @if (Model.DonationButton != null && !string.IsNullOrEmpty(Model.DonationButton.Text))
                {
                    <button id="donate-modal-button" class="donate-button">@Model.DonationButton.Text</button>
                }
            </div>
            </div>
        </div>
    <div class="media-icons">
        <a href="#"><img src="~/assets/images/Facebook-header.svg"/></a>
        <a href="#"><img src="~/assets/images/Twitter-header.svg"/></a>
        <a href="#"><img src="~/assets/images/Instagram-header.svg"/></a>
    </div>

    <div class="vector-scale">
        <img src="~/assets/images/Vector-header.svg" class="img-vector" />
        <img src="~/assets/images/Vector-header-2.svg" class="img-vector-second" />
    </div>

    <div id="donate-modal" class="modal">
        <div class="modal-content">
            <div class="donate-background">
                <div class="donate-wrapper">
                    <img id="donate-modal-close" class="close" src="~/assets/images/Close.svg" />
                    <img class="donate-halo-icon" src="~/assets/images/Halo.svg" alt="Halo" />
                    <h6 class="donate-title">Leuka - doniraj sredstva</h6>
                    <p class="donate-subtitle">Lorem ipsum dolor sit amet something else</p>
                    <form class="donate-form">
                        <div class="donate-form-row">
                            <div class="donate-form-cell">
                                <label class="donate-form-label">UPLATILAC*</label>
                                <input id="donor" class="donate-form-input" placeholder="Vaše Ime i Prezime" />
                            </div>
                            <div class="donate-form-cell">
                                <label class="donate-form-label">IZNOS*</label>
                                <input id="amount" class="donate-form-input" placeholder="Iznos Uplate" />
                            </div>
                        </div>

                        <div class="donate-form-row">
                            <div class="donate-form-cell">
                                <label class="donate-form-label">KOMPANIJA</label>
                                <input id="company" class="donate-form-input" placeholder="Naziv Kompanije" />
                            </div>
                            <div class="donate-form-cell">
                                <label class="donate-form-label">EMAIL*</label>
                                <input id="email" class="donate-form-input" placeholder="Vaš Email" />
                            </div>
                        </div>
                        <button id="donate-submit-button" class="button donate-submit-button" type="button">Prikaži detalje za uplatu</button>
                    </form>

                    <p class="donate-bottom-text">
                        *Akcija obuhvata izložbu radova pacijentkinje, nastalih za vreme transplantacije matičnih
                        ćelija,
                        koncerte i tribinu.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div id="donate-information-modal" class="modal">
        <div class="modal-content">
            <div class="donate-information-background">
                <div class="donate-information-wrapper">
                    <img id="donate-information-close" class="close" src="~/assets/images/Close.svg" />
                    <img class="donate-information-halo-icon" src="~/assets/images/Halo.svg" alt="Halo" />
                    <h6 class="donate-information-title">Hvala na donaciji!</h6>
                    <p class="donate-information-subtitle">Podaci za uplatu Leuka organizaciji su:</p>

                    <div class="donate-informations-wrapper">
                        <div class="donate-information-row">
                            <div class="donate-information-cell">
                                <label class="donate-information-label">ORGANIZACIJA</label>
                            </div>
                            <div class="donate-information-cell">
                                <p class="donate-information-value">Leuka</p>
                            </div>
                        </div>

                        <div class="donate-information-row">
                            <div class="donate-information-cell">
                                <label class="donate-information-label">ZIRO-RAČUN</label>
                            </div>
                            <div class="donate-information-cell">
                                <p class="donate-information-value">17-8379435686452-54</p>
                            </div>
                        </div>

                        <div class="donate-information-row">
                            <div class="donate-information-cell">
                                <label class="donate-information-label">POZIV NA BROJ</label>
                            </div>
                            <div class="donate-information-cell">

                                <p class="donate-information-value">97</p>
                            </div>
                        </div>

                        <div class="donate-information-row">
                            <div class="donate-information-cell">
                                <label class="donate-information-label">MATICNI BROJ</label>
                            </div>
                            <div class="donate-information-cell">
                                <p class="donate-information-value">876778564367</p>
                            </div>
                        </div>
                        <button id="donate-information-close-button" class="button donate-information-button"
                            type="button">Ok, hvala</button>

                        <p class="donate-information-bottom-text">
                            *Akcija obuhvata izložbu radova pacijentkinje, nastalih za vreme transplantacije matičnih
                            ćelija
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/js/donate-information.js"></script>
    <script src="~/assets/js/donate.js"></script>
    <script src="~/assets/js/header.js"></script>
</header>



