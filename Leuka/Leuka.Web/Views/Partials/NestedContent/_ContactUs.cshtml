@inherits UmbracoViewPage<Leuka.Core.ViewModels.Shared.ContactusViewModel>

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta charset="UTF-8" />

<div class="contact-us-wrapper @Model.ContactUsFormClass">
    <div class="contact-us-form-wrapper page-content-block-padding-bottom">
        <h1 class="form-header"><img src="~/assets/Images/Ring.svg" class="ring-svg" />@Model.Title</h1>
        <h3 class="form-quote">@Model.Description</h3>

        <form class="contact-us-form" method="POST" name="contactUsForm">
            <div class="row">
                <div>
                    <label for="firstName">IME*</label> <br>
                    <input type="text" placeholder="Vaše ime" name="firstName" id="firstName" />
                </div>
                <div>
                    <label for="lastName">PREZIME*</label><br>
                    <input type="text" placeholder="Vaše prezime" name="lastName" id="lastName" />
                </div>
            </div>
            <div>
                <label for="email">EMAIL*</label><br>
                <input type="text" placeholder="Vaš Email" name="email" id="contact-email" />
            </div>
            <div>
                <label for="messageText">PORUKA*</label><br>
                <input type="text" placeholder="Poruka" name="messageText" id="messageText" />
            </div>
            <div class="checkbox-input">
                <input type="checkbox" name="involveInActions" id="involveInActions">
                <span>@Model.CheckBoxLabel</span>
            </div>
            <div class="contact-us-button" id="submit-contact-message">
                <a href="#" >@Model.ButtonLabel</a>
            </div>
        </form>
    </div>
</div>
<script src="~/assets/js/contact.js"></script>
