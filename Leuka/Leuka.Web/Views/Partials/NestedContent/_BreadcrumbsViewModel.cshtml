@inherits UmbracoViewPage<Leuka.Core.ViewModels.Shared.BreadcrumbsViewModel>

@if (Model.Chain.Any())
{
    <div class="blog-post-header">
        <div class="blog-post-header-content">
            @{var numberOfItems = Model.Chain.Count;}
            @for (int i = 0; i < numberOfItems; i++)
            {
                if (i == 0)
                {
                    <a href="@Model.Chain.ElementAt(i).Link" class="blog-post-header-content-default">@Model.Chain.ElementAt(i).Text</a>
                }
                else
                {
                    <a href="@Model.Chain.ElementAt(i).Link" class="blog-post-header-content-title">
                        @Model.Chain.ElementAt(i).Text
                    </a>
                }
                if (i + 1 != numberOfItems)
                {
                    <div class="blog-post-header-arrows">
                        <svg width="100%" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4.64645 0.853554C4.45118 0.658291 4.45118 0.341709 4.64645 0.146447C4.84171 -0.0488154 5.15829 -0.0488154 5.35355 0.146447L9.85355 4.64645C10.0488 4.84171 10.0488 5.15829 9.85355 5.35355L5.35355 9.85355C5.15829 10.0488 4.84171 10.0488 4.64645 9.85355C4.45118 9.65829 4.45118 9.34171 4.64645 9.14645L8.79289 5L4.64645 0.853554ZM0.646447 0.853553C0.451185 0.658291 0.451185 0.341709 0.646447 0.146447C0.84171 -0.0488155 1.15829 -0.0488155 1.35355 0.146447L5.85355 4.64645C6.04882 4.84171 6.04882 5.15829 5.85355 5.35355L1.35355 9.85355C1.15829 10.0488 0.841709 10.0488 0.646446 9.85355C0.451185 9.65829 0.451185 9.34171 0.646446 9.14645L4.79289 5L0.646447 0.853553Z" fill="currentColor"></path>
                        </svg>
                    </div>
                }
            }
        </div>
    </div>
}
